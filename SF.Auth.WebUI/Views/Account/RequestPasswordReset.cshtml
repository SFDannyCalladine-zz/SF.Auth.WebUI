@using System.Web.Mvc.Html
@using Scope.UI.Helpers
@model SF.Auth.WebUI.Models.Account.RequestPasswordResetViewModel
@{
    ViewBag.Title = "StoreFeeder - Request New Password";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3" style="top: 125px;">
        <div class="panel panel-login">
            <div class="panel-heading">
                <span>Request New Password</span>
            </div>
            <div class="panel-body">
                <p>Please enter your email address to receive a password reset email.</p>
                @using (Html.BeginForm("requestpasswordreset", "login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group @Html.IsValid(x => x.EmailAddress)">
                        @Html.LabelFor(x => x.EmailAddress, new { @class = "control-label col-md-4" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.EmailAddress, string.Empty, new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-7 col-md-offset-4">
                            <button class="btn btn-primary" id="submit" type="submit">Submit&nbsp;<i class="fa fa-arrow-right"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>